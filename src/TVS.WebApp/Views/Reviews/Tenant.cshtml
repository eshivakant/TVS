@{
    ViewData["Title"] = "Index";
}


@section AddToHead{
    <style>
        .md-datepicker-calendar-pane {
            z-index: 1151;
        }
    </style>
}



<div class="container"  ng-app="tvsApp" ng-controller="tenantController">



<h2>Reviews</h2>

<div  style="background: lightgray">

        <table>
            <tr>

                    <td style="width: 80%"><input class="form-control pull-right" style="margin: 10px;" placeholder="basic search..."/></td>
                    <td>
                        <button type="button" class="btn btn-primary" style="margin: 10px" data-toggle="modal" data-target="#myModal">Search</button>
                    </td>
                    <td> <button type="button" class="btn btn-danger" style="margin: 10px" data-toggle="modal" data-target="#myModal">Advanced Search</button></td>

            </tr>
        </table>
 </div>



    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title alert alert-info fa fa-search">Please fill the form below to search for the person. Please note that due to personal security reasons we can only show the person if an exact match is found. If you cannot find the person in our database, you can always request more about hime using buttons provided.</h4>
                </div>
                <div class="modal-body">

                    <div class="form-horizontal">

                        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>


                        <div class="form-group">
                            <div class="col-md-4 control-label">
                                Initial
                            </div>

                            <div class="col-md-6">
                                <input ng-model="newPerson.Initial" class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4 control-label">
                                First Name
                            </div>
                            <div class="col-md-6">
                                <input ng-model="newPerson.FirstName" class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4 control-label">
                                Middle Name
                            </div>

                            <div class="col-md-6">
                                <input ng-model="newPerson.MiddleName" class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4 control-label">
                                Last Name
                            </div>

                            <div class="col-md-6">
                                <input ng-model="newPerson.LastName" class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4 control-label">
                                Date Of Birth
                            </div>
                            <div class="col-md-6">
                                <md-datepicker ng-model="newPerson.DateOfBirth"></md-datepicker>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-4 control-label">
                                Place Of Birth
                            </div>
                            <div class="col-md-6">
                                <input ng-model="newPerson.PlaceOfBirth" class="form-control"/>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-4 control-label">
                                Identification Mark
                            </div>

                            <div class="col-md-6">
                                <input ng-model="newPerson.IdentificationMark" class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 control-label">
                                PAN Card Number
                            </div>

                            <div class="col-md-6">
                                <input ng-model="newPerson.PAN" class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 control-label">
                                Adhaar Card Number
                            </div>

                            <div class="col-md-6">
                                <input ng-model="newPerson.AdhaarCard" class="form-control"/>
                            </div>
                        </div>





                        <div class="form-group" ng-repeat="attr in newPerson.PersonAttributes">
                            <div class="col-md-4 control-label">
                                {{attr.RoleAttribute.Description}}
                            </div>


                            <div class="col-md-6" ng-show="attr.RoleAttribute.ValueType=='string'">
                                <input ng-model="attr.StringValue" class="form-control"/>
                            </div>
                            <div class="col-md-6" ng-show="attr.RoleAttribute.ValueType=='int'">
                                <input ng-model="attr.IntValue" class="form-control"/>
                            </div>
                            <div class="col-md-6" ng-show="attr.RoleAttribute.ValueType=='float'">
                                <input ng-model="attr.FloatValue" class="form-control"/>
                            </div>
                            <div ng-show="attr.RoleAttribute.ValueType=='date'">

                                <md-datepicker ng-model="attr.DateValue"></md-datepicker>
                            </div>

                        </div>

                        @*<button class="btn btn-primary nextBtn btn-lg pull-right" type="button" ng-show="registrationSuccess">Search..</button>*@
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Search..</button>
                </div>
            </div>

        </div>
    </div>


</div>