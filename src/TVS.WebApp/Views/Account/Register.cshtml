<div id="category" class="row text-center">
    <h2 class="row text-center col-md-12" style="margin:25px">Tell us who you are?</h2>
    <br />
    <div class="col-md-3 img-rounded table-bordered" style="margin:25px; padding:25px">
        <div class="text-center">
            <img src="~/images/landlord.png" alt="tenants" style="width:100%;height:100%">
        </div>

        <a class="btn btn-lg btn-success" style="margin:15px" data-toggle="collapse">
            Register as a Landlord.
        </a>

    </div>
    <div class="col-md-3  img-rounded table-bordered" style="margin:25px; padding:25px">
        <div class="text-center">
            <img src="~/images/tenant.png" alt="tenants" style="width:100%;height:100%">
        </div>

        <a class="btn btn-lg btn-success" style="margin:15px" data-toggle="collapse">
            Register as a Tenant.
        </a>
    </div>
    <div class="col-md-3  img-rounded table-bordered" style="margin:25px; padding:25px">
        <div class="text-center">
            <img src="~/images/rwa.png" alt="tenants" style="width:100%;height:100%">
        </div>

        <a class="btn btn-lg btn-success" style="margin:15px" data-toggle="collapse">
            Register as a Society/RWA.
        </a>

    </div>
</div>


























